<h3>Create a Task</h3>
<%= form_for @task do |f| %>
  <p>Enter Task's Name: <%= f.text_field :name, placeholder: "task name" %></p>
  <p>Enter Task Status: <%= f.text_field :status, placeholder: "task status.." %></p>
<p><%= f.collection_select :project_id, @projects, :id, :title %></p>
  <%= f.submit %>
<% end %>
